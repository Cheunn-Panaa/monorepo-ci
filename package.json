{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "monorepo-ci",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build:all": "yarn workspaces foreach --topological --parallel --verbose run build"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "prettier": "^3.0.0"
  }
}
